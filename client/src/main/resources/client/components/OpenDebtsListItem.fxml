   <children>
      <Label fx:id="participantLabel" prefHeight="17.0" prefWidth="200.0" text="Label" HBox.hgrow="ALWAYS">
         <HBox.margin>
            <Insets right="10.0" />
         </HBox.margin>
      </Label>
      <Button mnemonicParsing="false" onAction="#settleDebt" prefHeight="25.0" prefWidth="143.0" text="%OpenDebtsListItem.markReceived" />
   </children>
   <padding>
      <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
   </padding>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</fx:root>
