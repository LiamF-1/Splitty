<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.scenes.AdminLoginCtrl"
            prefHeight="400.0" prefWidth="600.0"
            stylesheets="@/client/scenes/style.css"
            styleClass="anchor-pane">
    <PasswordField styleClass="text-field" fx:id="passwordTextField" layoutX="198.0" layoutY="213.0" promptText="%AdminLogin.enterPassword"/>
    <Button styleClass="button" fx:id="loginButton" layoutX="365.0" layoutY="213.0" mnemonicParsing="false"  onAction="#loginButtonClicked" text="%AdminLogin.loginBtn"/>
    <Label styleClass="label" layoutX="198.0" layoutY="192.0" text="%AdminLogin.passwordLabel"/>
    <Label styleClass="label" layoutX="150" layoutY="50" text="%AdminLogin.title">
        <font>
            <Font size="50"/>
        </font>
    </Label>
    <Button  styleClass="button"   layoutX="20" layoutY="10" mnemonicParsing="false" onAction="#backButtonClicked" text="Back" />
</AnchorPane>


